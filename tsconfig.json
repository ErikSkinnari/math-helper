{
    "compilerOptions": {
      "baseUrl": ".",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "jsx": "preserve",
      "lib": [
        "dom",
        "esnext"
      ],
      "module": "esnext",
      "noEmit": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "esnext",
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "importHelpers": true,
      "paths": {
        "src/*": [
          "src/*"
        ]
      }
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "**/node_modules/*",
      ".cache",
      "node_modules",
      "public",
      "**/*.stories.*"
    ]
  }